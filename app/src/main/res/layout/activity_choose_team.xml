<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_team"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/triangle_pn"
    tools:context="com.five.conquest.ChooseTeamActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/welcome"
        android:text="WELCOME TO CONQUEST!"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_marginTop="30dp"
        android:id="@+id/please"
        android:text="Please Select Your Team:"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/knight_text"
        android:text="Knights"
        android:layout_marginTop="105dp"
        android:layout_alignTop="@+id/knight_button"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/knight_button_selector"
        android:id="@+id/knight_button"
        android:background="@null"
        android:onClick="onClickKnight"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/please"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ninja_text"
        android:text="Ninjas"
        android:layout_marginEnd="29dp"
        android:layout_below="@+id/pirate_button"
        android:layout_alignEnd="@+id/ninja_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pirate_text"
        android:text="Pirates"
        android:layout_below="@+id/pirate_button"
        android:layout_alignEnd="@+id/pirate_button"
        android:layout_marginEnd="27dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ninja_button_selector"
        android:id="@+id/ninja_button"
        android:background="@null"
        android:onClick="onClickNinjaOrPirate"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/knight_text"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/pirate_button_selector"
        android:id="@+id/pirate_button"
        android:background="@null"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter"
        android:onClick="onClickNinjaOrPirate"
        android:layout_alignTop="@+id/ninja_button"
        android:layout_alignParentStart="true" />

</RelativeLayout>
