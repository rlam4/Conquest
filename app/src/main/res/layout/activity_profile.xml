<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context="com.five.conquest.ProfileActivity">


    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAttackPoints"
        android:layout_marginEnd="14dp"
        android:layout_above="@+id/textViewDefensePoints"
        android:layout_alignEnd="@+id/textViewPoints" />

    <TextView
        android:text="Points to Allocate: 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textViewPoints"
        android:layout_below="@+id/textViewDefense"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/arrow_up"
        android:id="@+id/imageButtonDefense"
        android:layout_alignTop="@+id/textViewDefensePoints"
        android:layout_alignStart="@+id/imageButtonAttack" />

    <TextView
        android:text="Attack:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAttack"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textViewDistance"
        android:layout_alignStart="@+id/textViewDefense" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/textViewDefensePoints"
        android:layout_below="@+id/textViewAttack"
        android:layout_alignStart="@+id/textViewAttackPoints" />

    <TextView
        android:text="Defense:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDefense"
        android:layout_alignBaseline="@+id/textViewDefensePoints"
        android:layout_alignBottom="@+id/textViewDefensePoints"
        android:layout_alignStart="@+id/textViewPoints" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/arrow_up"
        android:id="@+id/imageButtonAttack"
        android:layout_marginStart="18dp"
        android:layout_alignTop="@+id/textViewAttackPoints"
        android:layout_toEndOf="@+id/textViewAttackPoints" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewUser"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Level 100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLevel"
        android:layout_below="@+id/textViewUser"
        android:layout_alignEnd="@+id/textViewAttack" />

    <TextView
        android:text="EXP: 100/100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewExp"
        android:layout_below="@+id/textViewUser"
        android:layout_alignEnd="@+id/textViewDistance" />

    <TextView
        android:text="Distance Traveled: 1000 Miles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDistance"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/progressBarExp"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarExp"
        android:visibility="visible"
        android:max="100"
        android:progressTint="@color/cast_intro_overlay_button_background_color"
        android:layout_below="@+id/textViewLevel"
        android:layout_centerHorizontal="true" />

</RelativeLayout>